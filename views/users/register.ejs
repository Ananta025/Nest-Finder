<% layout("/layouts/boilerplate") %>
<div class="row mt-5">
    <div class="col col-4 offset-4">
        <h4>Register on Nest Finder</h4>
    </div>
    <div class="col col-4 offset-4">
        <form action="/register" method="post" novalidate class="needs-validation">
            <div class="mt-2">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control p-1" required>
                <div class="valid-feedback">username looks good</div>
            </div>
            <div class="mt-2">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" id="email" class="form-control p-1" required>
            </div>
            <div class="mt-2">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control p-1" required>
            </div>
            <button type="submit" class="btn btn-success mt-3">Register</button>
        </form>
    </div>
</div>