<% layout("/layouts/boilerplate") %>
<div class="row">
<div class="col-12 col-md-10 col-lg-8 mx-auto">
<body>
    <h3 class="mb-4 text-center text-md-start">Edit your listing</h3>
    <form method="post" action="/listings/<%= listing._id%>?_method=put" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="title" type="text" value="<%= listing.title %>" class="form-control" required>
            <div class="valid-feedback">Title looks good</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <textarea name="description" class="form-control" required><%= listing.description %></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <div class="mb-3">
            <label class="mb-2">Previous Listing Image</label><br>
            <img class="img-fluid rounded" style="max-height: 300px;" src="<%= originalImageUrl %>" alt="Current listing image">
        </div>
        <div class="mb-3">
            <label for="image[url]" class="form-label">Upload new Image</label>
            <input name="image[url]" type="file" class="form-control" accept="image/*">
            <small class="text-muted">Leave empty to keep current image</small>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input name="price" type="number" value="<%= listing.price %>" class="form-control" required>
            </div>
            <div class="invalid-feedback">Price should be valid</div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="location" type="text" value="<%= listing.location %>" class="form-control" required>
                <div class="invalid-feedback">Location should be valid</div>
            </div>
            <div class="col-md-6 mb-3">
                <label for="country" class="form-label">Country</label>
                <input name="country" type="text" value="<%= listing.country %>" class="form-control" required>
                <div class="invalid-feedback">Country should be valid</div>
            </div>
        </div>
        
        <div class="d-grid d-md-flex justify-content-md-end">
            <button class="btn btn-dark px-4 py-2">Save Changes</button>
        </div>
    </form>
</body>
</div>
</div>