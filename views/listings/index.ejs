<% layout("/layouts/boilerplate") %>
<style>
  #filters-section {
    display: flex;
    flex-direction: column;
  }

  .filter-container {
    display: flex;
    overflow-x: auto;
    scrollbar-width: none; /* Hide scrollbar for Firefox */
    -ms-overflow-style: none; /* Hide scrollbar for IE and Edge */
    padding-bottom: 5px;
    -webkit-overflow-scrolling: touch; /* Smooth scrolling on iOS */
    margin: 1rem 0rem;
  }
  
  /* Hide scrollbar for Chrome, Safari and Opera */
  .filter-container::-webkit-scrollbar {
    display: none;
  }
  
  .filter {
    text-align: center;
    margin-right: 1.5rem;
    flex-shrink: 0; /* Prevent filters from shrinking */
    opacity: 0.7;
    transition: all 0.3s ease;
    padding: 10px 5px;
    position: relative;
  }
  
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter:hover::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 20%;
    width: 60%;
    height: 2px;
    background-color: #222;
    transition: width 0.3s;
  }
  
  .filter p {
    font-size: 0.7rem;
    margin-bottom: 0;
    margin-top: 0.3rem;
  }

  .tax-info {
    display: none;
  }
  
  .tax-toggle {
    border: 1px solid #aaa;
    border-radius: 1rem;
    padding: 0.75rem;
    display: flex;
    align-items: center;
    flex-shrink: 0; /* Prevent from shrinking */
  }
  
  .filter-icon {
    font-size: 1.15rem;
  }

  /* Media queries for better responsiveness */
  @media (min-width: 768px) {
    #filters-section {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
    
    .filter-container {
      flex: 1;
      margin-right: 1rem;
      margin-bottom: 0.5rem; /* Remove bottom margin on larger screens */
    }
    
    .tax-toggle {
      width: auto;
    }
  }

  @media (max-width: 576px) {
    .filter {
      margin-right: 1rem;
    }
  }
</style>

<div id="filters-section">
  <div class="filter-container">
    <div class="filter">
      <div class="filter-icon"><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div class="filter-icon"><i class="fa-solid fa-bed-pulse"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div class="filter-icon"><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic cities</p>
    </div>
    <div class="filter">
      <div class="filter-icon"><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing pools</p>
    </div>
    <div class="filter">
      <div class="filter-icon"><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </div>
    <div class="filter">
      <div class="filter-icon"><i class="fa-solid fa-house-flag"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div class="filter-icon"><i class="fa-solid fa-tree-city"></i></div>
      <p>Tree house</p>
    </div>
    <div class="filter">
      <div class="filter-icon"><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div class="filter-icon"><i class="fa-brands fa-fly"></i></div>
      <p>OMG!</p>
    </div>
    <div class="filter">
      <div class="filter-icon"><i class="fa-regular fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>
  </div>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>

<body>

  <div class="container-fluid px-2 px-md-0">
    <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
      <% for(let listing of allListings){ %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="image-link text-decoration-none">
          <div class="card h-100 listing-card">
            <img
              src="<%= listing.image.url %>"
              class="card-img-top"
              alt="listing_image"
              style="height: 18rem; object-fit: cover"
            />
            <div class="card-img-overlay">
            </div>
            <div class="card-body p-2">
              <p class="card-text">
                <b><%= listing.title %></b><br>
                <%= listing.location %><br>
                <b>â‚¹ <%= listing.price ? listing.price.toLocaleString("en-IN") : 0 %></b> / Night
                <i class="tax-info">&nbsp;+18% GST</i>
              </p>
            </div>
          </div>
        </a>
      </div>
      <% } %>
    </div>
  </div>
</body>


<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("change",()=>{
    let taxInfo = document.getElementsByClassName("tax-info");
    for(let info of taxInfo){
      info.style.display = taxSwitch.checked ? "inline" : "none";
    }
  })
</script>